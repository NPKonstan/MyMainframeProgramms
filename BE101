  DCL MY_DATETIME PIC '9999.99.99B9999' ;
      MY_DATETIME = SUBSTR(DATETIME(),1,12);
  GRAMH = 'Hμέρα και Ωρα Ροής :                             '
               !!char(DATETIME());
  GRAMH = 'Hμέρα και Ωρα Ροής :                             '
               !!MY_DATETIME;
  WRITE FILE(PRT) FROM(LINE);
  CTLCHR = ' ';
  GRAMH = 'Διαβάσθηκαν '!! CNT_REC_READ !!' Εγγραφές ';
  WRITE FILE(PRT) FROM(LINE);
  GRAMH = 'Επεξεργάσθηκαν '!!CNT_REC_PROCCED!!' Εγγραφές ';
  WRITE FILE(PRT) FROM(LINE);
  GRAMH = 'Επεξεργάσθηκαν '!!CNT_HEADER     !!' Εγγραφές Καταστημάτων';
  WRITE FILE(PRT) FROM(LINE);
  GRAMH = 'Επεξεργάσθηκαν '!!CNT_DETAIL     !!' Εγγραφές Επιταγών    ';
  WRITE FILE(PRT) FROM(LINE);
