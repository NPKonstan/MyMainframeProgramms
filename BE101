  WRITE FILE(PRT) FROM(LINE);
  GRAMH = 'Σύνολο Kαταστημ.ΠΕΚ για εισαγωγή : '!!CNT_INSERTED_PEK;
  WRITE FILE(PRT) FROM(LINE);
  GRAMH = 'Σύνολο Kαταστημ.ΠΕΚ για Update: '!!CNT_UPDATED_PEK;
